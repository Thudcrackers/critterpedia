%p#notice= notice
%h1 Bugs
%table
  %thead
    %tr
      %th Name
      %th Time
      %th Value
      %th{:colspan => "3"}
  %tbody
    - @bugs.each do |bug|
      %tr
        %td= bug.name
        %td= bug.time
        %td= bug.value
        %td= link_to 'Show', bug
        %td= link_to 'Edit', edit_bug_path(bug)
        %td= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Bug', new_bug_path
